{% set flavor_name = flavor_name or "m1.tiny" %}
{
   "NovaServers.boot_and_rebuild_server": [
        {
            "args": {
                "flavor": {
                    "name": "m1.large"
                },
                "from_image": {
                    "name": "Debian 9"
                },
                "to_image": {
                    "name": "Ubuntu 14.04 LTS"
                }
            },
            "runner": {
                "type": "constant",
                "times": 4,
                "concurrency": 2
            },
            "context": {
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
